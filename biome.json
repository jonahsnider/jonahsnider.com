{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"includes": ["**", "!**/.next", "!next-env.d.ts", "!**/out", "!**/node_modules", "!**/.wrangler"]
	},
	"formatter": {
		"formatWithErrors": true,
		"lineWidth": 120
	},
	"javascript": {
		"formatter": {
			"jsxQuoteStyle": "single",
			"quoteStyle": "single"
		},
		"globals": ["React"]
	},
	"json": {
		"parser": {
			"allowComments": true
		}
	},
	"linter": {
		"rules": {
			"correctness": {
				"useUniqueElementIds": "off"
			},
			"nursery": {
				"useSortedClasses": "error"
			}
		}
	}
}
